{
  "name": "easy-carousel",
  "version": "1.0.0",
  "description": "A lightweight, responsive, and feature-rich JavaScript carousel/slider library with no dependencies",
  "main": "dist/easy-carousel.min.js",
  "style": "dist/easy-carousel.min.css",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "test": "jest",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.{js,css}\"",
    "prepare": "npm run build"
  },
  "keywords": [
    "carousel",
    "slider",
    "slideshow",
    "gallery",
    "javascript",
    "lightweight",
    "touch",
    "swipe",
    "responsive"
  ],
  "author": "Nikba Creative Studio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nikba/easy-carousel.git"
  },
  "bugs": {
    "url": "https://github.com/nikba/easy-carousel/issues"
  },
  "homepage": "https://github.com/nikba/easy-carousel#readme",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.10.0",
    "css-minimizer-webpack-plugin": "^6.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.8.0",
    "prettier": "^3.2.5",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4"
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ]
}